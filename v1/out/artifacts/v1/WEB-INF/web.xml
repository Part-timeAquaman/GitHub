<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>service.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>release</servlet-name>
        <servlet-class>service.ReleaseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>release</servlet-name>
        <url-pattern>/card.add</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>getdata</servlet-name>
        <servlet-class>service.GetDataServlet</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>getdata</servlet-name>
        <url-pattern>/card.get</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>update_data</servlet-name>
        <servlet-class>service.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>update_data</servlet-name>
        <url-pattern>/card.update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete_data</servlet-name>
        <servlet-class>service.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete_data</servlet-name>
        <url-pattern>/card.delete</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>share_data</servlet-name>
        <servlet-class>service.ShareServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>share_data</servlet-name>
        <url-pattern>/card.share</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>festival</servlet-name>
        <servlet-class>service.FestivalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>festival</servlet-name>
        <url-pattern>/card.show</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>map</servlet-name>
        <servlet-class>service.MapServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>map</servlet-name>
        <url-pattern>/card.map</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>matcher</servlet-name>
        <servlet-class>service.MatcherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>matcher</servlet-name>
        <url-pattern>/card.matcher</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>store</servlet-name>
        <servlet-class>service.StoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>store</servlet-name>
        <url-pattern>/card.store</url-pattern>
    </servlet-mapping>

</web-app>